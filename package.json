{
  "name": "chef-socket",
  "version": "3.1.5",
  "keywords": [
    "chef-js",
    "server",
    "static-serve",
    "http-server",
    "https-server",
    "nodejs-server",
    "express",
    "spa",
    "nodejs",
    "javascript",
    "cli",
    "typescript",
    "socket.io",
    "websockets"
  ],
  "description": "chef-js + express + socket.io = static files server + websockets",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "chef-socket": "./bin/chef-socket"
  },
  "files": [
    "dist",
    "demo",
    "bin"
  ],
  "repository": "git://github.com/chef-js/socket.git",
  "author": "Jacek Pietal <Prozi>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "bin/chef-socket demo --plugin node_modules/chef-core/chat.js",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:docs": "typedoc",
    "pretest": "yarn build",
    "test": "jest --forceExit",
    "format": "prettier . --write",
    "lint": "eslint src --fix",
    "precommit": "yarn lint && yarn test && yarn build:docs && yarn format",
    "amend": "yarn precommit && git commit -a --am --no-edit",
    "up": "npx npm-check-updates -u && yarn -f && yarn upgrade && yarn add express@^4 --save && yarn add @types/express@^4 -D"
  },
  "dependencies": {
    "chef-core": "^4.1.7",
    "express": "^4",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/express": "^4",
    "@types/node": "^22.15.3",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "socket.io-client": "^4.8.1",
    "typedoc": "^0.28.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
